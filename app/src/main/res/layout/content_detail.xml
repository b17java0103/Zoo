<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.gagan.gridview.DetailActivity"
    tools:showIn="@layout/activity_detail">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/img"
            android:layout_width="250sp"
            android:layout_height="200sp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:background="@color/white" />

        <TextView
            android:id="@+id/t1"
            android:padding="3dip"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/img"
            android:text="Name                   :" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img"
            android:id="@+id/textName"
            android:layout_toRightOf="@+id/t1"
            android:padding="3dip"
            />
        <TextView
            android:paddingTop="20dp"
            android:id="@+id/t2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/t1"
            android:padding="3dip"
            android:text="Scientific Name :" />

        <TextView
            android:layout_marginTop="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/t2"
            android:layout_below="@+id/textName"
            android:id="@+id/textSci"
            />



        <TextView
            android:paddingTop="20dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textSci"
            android:padding="3dip"
            android:id="@+id/t3"
            android:text="Diet                      :" />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_below="@+id/textSci"
            android:layout_toRightOf="@+id/t2"
            android:id="@+id/textDiet"
            android:gravity="left"
            android:padding="3dip"
            />
        <TextView
            android:paddingTop="20dp"
            android:layout_below="@+id/textDiet"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:padding="3dip"
            android:id="@+id/t4"
            android:text="Habitat                :" />

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textDiet"
            android:id="@+id/textHab"
            android:gravity="left"
            android:padding="8dip"
            android:layout_toRightOf="@+id/t1"
            android:layout_toEndOf="@+id/t1" />

        <TextView
            android:layout_below="@+id/textHab"
            android:id="@+id/text"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            />
    </RelativeLayout>
</ScrollView>